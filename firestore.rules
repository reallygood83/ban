rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 함수
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(resource) {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // memberIds 필드가 존재하고 사용자가 멤버인지 확인
    function isMember(resource) {
      return isSignedIn() &&
        resource.data.memberIds != null &&
        (request.auth.uid in resource.data.memberIds);
    }

    // 소유자 또는 멤버인지 확인 (memberIds가 없어도 소유자는 접근 가능)
    function hasProjectAccess(resource) {
      return isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        (resource.data.memberIds != null && request.auth.uid in resource.data.memberIds)
      );
    }

    // 프로젝트 컬렉션
    match /projects/{projectId} {
      // 읽기: 소유자 또는 멤버
      allow read: if hasProjectAccess(resource);

      // 생성: 인증된 사용자
      allow create: if isSignedIn();

      // 수정: 소유자 또는 멤버 (멤버는 제한적 수정)
      allow update: if hasProjectAccess(resource);

      // 삭제: 소유자만
      allow delete: if isOwner(resource);

      // 서브컬렉션: 멤버
      match /members/{memberId} {
        allow read: if isSignedIn(); // 프로젝트 접근 권한은 상위에서 체크됨 (하지만 쿼리 시 필요할 수 있음)
        allow write: if isSignedIn(); // 정교한 권한 제어 필요
      }

      // 서브컬렉션: 반별 명단
      match /classRosters/{classNumber} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
      
      // 서브컬렉션: 초대
      match /invitations/{invitationId} {
        allow read, write: if isSignedIn();
      }
    }
    
    // 초대 컬렉션 (루트 레벨 - 쿼리용)
    match /invitations/{invitationId} {
      // 읽기: 본인이 초대받은 것 또는 본인이 보낸 것
      allow read: if isSignedIn();
      
      // 생성: 인증된 사용자 누구나
      allow create: if isSignedIn();
      
      // 수정: 초대받은 사람 또는 초대한 사람
      allow update: if isSignedIn();
      
      // 삭제: 초대한 사람만
      allow delete: if isSignedIn() && resource.data.invitedBy == request.auth.uid;
    }
  }
}
